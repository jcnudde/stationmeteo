//---------------------------------------------------------------------------

#pragma hdrstop

#include "MeteoParser.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

#include "TcpServer.h"

void MeteoParser::Parse(char * buf, SOCKET sock)
{

	TcpServer * serv = this->getServer();

	if(strcmp(buf,"METEO\n") == 0 ) {
		this->previsionMeteo(serv,sock);
	}
	if(strcmp(buf,"DONNEDONNER") == 0 ){
		this->getDonnerMeteo(serv,sock);
    }

}
void MeteoParser::previsionMeteo(TcpServer * serv,SOCKET client)
{
	serv->sendMessage(client,"123458");
}
void MeteoParser::getDonnerMeteo(TcpServer *serv,SOCKET client)
{
	this->recupDonnerMeteo = RecupDonnerMeteo::getInstance();

	tabDonnerCapteur tabDonner = String(recupDonnerMeteo->getDonner());
	string protocole = "$";
	protocole+=String(tabDonner.vitesseVent);
    protcole+=";";
	protocole+=String(tabDonner.temperature);
	protcole+=";";
	protocole+=String(tabDonner.pressionAtmospherique);
	protcole+=";";
	protocole+=String(tabDonner.direction);
	protcole+=";";
	protocole+=String(tabDonner.hummiditeRelative);
	protcole+=";";
	protocole+=String(tabDonner.luminosite);
	protcole+=";";
	protocole+=String(tabDonner.jour);
	protcole+=";";
	protocole+=String(tabDonner.pluie);
	protcole+=";";
	protocole+=String(tabDonner.surfaceDePluie);
    protcole+="$";
	serv->sendMessage(client,protocole);
}
